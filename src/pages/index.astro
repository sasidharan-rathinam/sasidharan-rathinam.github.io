---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import homeData from '../data/home.json';
import siteData from '../data/site.json';

const pageTitle = `${siteData.name} | Senior Data Engineer`;
const { summary, services_preview } = homeData;
---

<BaseLayout title={pageTitle}>
  <Hero />
  
  <section class="summary container">
    <div class="summary-grid">
      {summary.map(item => (
          <div class="summary-item">
            <h2>{item.title}</h2>
            <p class="text-muted">{item.text}</p>
          </div>
      ))}
    </div>
  </section>

  <section class="container mt-8 mb-8">
    <h3 class="section-title">{services_preview.title}</h3>
    <p>
      {services_preview.description}
    </p>
    <ul class="services-preview">
        {services_preview.items.map(item => (
            <li>{item}</li>
        ))}
    </ul>
    <div class="mt-8">
        <a href={services_preview.link.url} class="link-arrow">{services_preview.link.text}</a>
    </div>
  </section>
</BaseLayout>

<style>
  .summary {
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: var(--space-lg) 0;
    margin-bottom: var(--space-xl);
  }
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    text-align: center;
  }
  .summary-item h2 {
    color: var(--color-accent);
    margin-bottom: var(--space-sm);
    margin-top: 0;
    font-size: 2.5rem;
  }
  .services-preview {
    margin-top: var(--space-md);
    padding-left: var(--space-md);
  }
  .services-preview li {
    margin-bottom: var(--space-sm);
    color: var(--color-text-muted);
  }
  .link-arrow {
    font-weight: 600;
  }
</style>
