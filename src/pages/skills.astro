---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Skills & Tech Stack | Sasidharan Rathinam";

import skillsData from '../data/skills.json';
import themeData from '../data/theme.json';

const sortedSkills = skillsData.sort((a, b) => (a.order || 999) - (b.order || 999));
---

<BaseLayout title={pageTitle}>
  <section class="container mt-8">
    <h1 class="mb-8">Tools & Technologies</h1>
    <p class="intro">
      I have worked with a wide range of technologies over the last 9 years. Here are the tools I use on a daily basis to build robust data platforms.
    </p>

    <div class="skills-grid" style={`grid-template-columns: repeat(${themeData.layout.grid?.skillColumns || 3}, 1fr);`}>
      {sortedSkills.map((skillGroup) => (
        <div class="skill-card">
          <h3>{skillGroup.category}</h3>
          <ul>
            {skillGroup.items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .intro {
    max-width: var(--max-width);
    margin-bottom: var(--space-lg);
    font-size: 1.1rem;
  }
  .skills-grid {
    display: grid;
    /* grid-template-columns handled inline for configuration */
    gap: var(--space-md);
  }
  .skill-card {
    background: var(--color-bg-secondary);
    padding: var(--space-md);
    border-radius: 8px;
    border: 1px solid var(--color-border);
  }
  .skill-card h3 {
    margin-top: 0;
    color: var(--color-accent);
    font-size: 1.2rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  .skill-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .skill-card li {
    margin-bottom: 0.5rem;
    display: flex;
    align-items: center;
  }
  .skill-card li::before {
    content: "â–¹";
    color: var(--color-accent);
    margin-right: 0.5rem;
  }
</style>
