---
import BaseLayout from '../../layouts/BaseLayout.astro';
import blogData from '../../data/blog.json';
import { marked } from 'marked';

export async function getStaticPaths() {
	return blogData.map((post) => ({
		params: { slug: post.slug },
		props: { post },
	}));
}

const { post } = Astro.props;
// Content is now in sections, parsed in template

// Formatting Date
const formattedDate = new Date(post.pubDate).toLocaleDateString('en-us', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
});

---

<BaseLayout title={post.title}>
	<article class="container mt-8 mb-8 blog-article">
		<div class="blog-header">
			<div class="date">{formattedDate}</div>
			<h1>{post.title}</h1>
            <div class="tags mt-4">
                {post.tags.map(tag => (
                    <span class="tag">{tag}</span>
                ))}
            </div>
			<hr />
		</div>
        
        <div class="prose content">
            {post.sections.map(section => (
                <div class="section mb-8">
                    {section.title && <h2 class="section-title">{section.title}</h2>}
                    {section.content.map(block => (
                        block.type === 'text' ? (
                            <div set:html={marked.parse(block.value)} />
                        ) : block.type === 'code' ? (
                             <pre><code class={`language-${block.language}`}>{block.value}</code></pre>
                        ) : null
                    ))}
                </div>
            ))}
        </div>
	</article>
</BaseLayout>

<style>
    .post-header {
        margin-bottom: var(--space-xl);
        max-width: var(--max-width);
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }
    .back-link {
        display: inline-block;
        margin-bottom: var(--space-md);
        font-size: 0.9rem;
        color: var(--color-text-muted);
    }
    .meta {
        color: var(--color-text-muted);
        margin-bottom: var(--space-sm);
        font-size: 0.9rem;
    }
    .tag {
        margin-left: 0.2rem;
        color: var(--color-accent);
    }
    .title {
        font-size: 2.5rem;
        margin-bottom: 0;
    }
    /* Prose styling handled globally */

</style>
