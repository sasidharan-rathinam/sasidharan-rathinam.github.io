---
import BaseLayout from '../../layouts/BaseLayout.astro';
import projectsData from '../../data/projects.json';
import { marked } from 'marked';

export async function getStaticPaths() {
	return projectsData.map((project) => ({
		params: { slug: project.slug },
		props: { project },
	}));
}

const { project } = Astro.props;
// Content is now in sections, parsed in template

// Formatting Date
const formattedDate = new Date(project.pubDate).toLocaleDateString('en-us', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
});
---

<BaseLayout title={`${project.title} | Projects`}> 
	<article class="container mt-8 mb-8 project-article">
		<div class="project-header">
            <div class="project-meta-top">
                <span class="date">{formattedDate}</span>
                {project.company && <span class="divider">•</span>}
                {project.company && <span class="company">{project.company}</span>}
                {project.role && <span class="divider">•</span>}
                {project.role && <span class="role">{project.role}</span>}
            </div>
			<h1>{project.title}</h1>
            <div class="tags mt-4">
                {project.tags.map(tag => (
                    <span class="tag">{tag}</span>
                ))}
            </div>
			<hr />
		</div>
        
        <div class="prose content">
            {project.sections.map(section => (
                <div class="section mb-8">
                    {section.title && <h2 class="section-title">{section.title}</h2>}
                    {section.content.map(block => (
                        block.type === 'text' ? (
                            <div set:html={marked.parse(block.value)} />
                        ) : block.type === 'code' ? (
                            <pre><code class={`language-${block.language}`}>{block.value}</code></pre>
                        ) : null
                    ))}
                </div>
            ))}
        </div>
	</article>
</BaseLayout>

<style>
    .project-header {
        margin-bottom: var(--space-lg);
    }
    .company {
        font-weight: 600;
        color: var(--color-accent);
    }
    .project-meta-top {
        color: var(--color-text-muted);
        font-size: 0.9rem;
        margin-bottom: var(--space-sm);
        display: flex;
        gap: 0.5rem;
        align-items: center; /* Helper for vertical alignment */
    }
    .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    /* Prose styling handled globally */

</style>
