---
import BaseLayout from '../layouts/BaseLayout.astro';
import contactData from '../data/contact.json';
import siteData from '../data/site.json';

const pageTitle = `Contact | ${siteData.name}`;
const { intro } = contactData;

const iconMap = {
    mail: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>`,
    linkedin: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>`,
    github: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0 3 1.5l2.5 2.5a3.5 3.5 0 0 1 0 3 1.5l-2.5 2.5c-.27 1.02-.27 2.22 0 3.5-.73 1.02-1.08 2.25-1 3.5-3.5 0-3.5-3.5-3.5-3.5 0-1-1-1 3 0l2 2"/></svg>`,
    copy: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="14" height="14" x="8" y="8" rx="2" ry="2"/><path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"/></svg>`,
    check: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"/></svg>`
};

---

<BaseLayout title={pageTitle}>
  <section class="container mt-8 contact-container">
    <h1 class="mb-8">Get in Touch</h1>
    <p class="intro">
      {intro}
    </p>
    
    <div class="contact-details">
        {contactData.contactMethods.map(method => {
            const Element = method.url ? 'a' : 'div';
            const props = method.url ? {
                href: method.url,
                target: method.icon !== 'mail' ? "_blank" : "_self",
                class: "contact-method link" 
            } : {
                class: "contact-method"
            };
            
            return (
                <Element {...props}>
                    <span class="icon" set:html={iconMap[method.icon] || ''}></span>
                    <div class="info">
                        <span class="label">{method.label}</span>
                        <span class="value" data-value={method.value}>{method.value}</span>
                    </div>
                    <button class="copy-btn" aria-label={`Copy ${method.label}`} title="Copy to clipboard">
                        <span class="copy-icon" set:html={iconMap.copy}></span>
                        <span class="check-icon hidden" set:html={iconMap.check}></span>
                    </button>
                </Element>
            );
        })}
    </div>

  </section>
</BaseLayout>

<script>
    document.querySelectorAll('.copy-btn').forEach(btn => {
        btn.addEventListener('click', async (e) => {
            e.preventDefault(); // Prevent link navigation
            e.stopPropagation();

            const card = (e.target as HTMLElement).closest('.contact-method');
            const valueSpan = card?.querySelector('.value');
            const textToCopy = valueSpan?.getAttribute('data-value');

            if (textToCopy) {
                try {
                    await navigator.clipboard.writeText(textToCopy);
                    
                    // Show check icon
                    const copyIcon = btn.querySelector('.copy-icon');
                    const checkIcon = btn.querySelector('.check-icon');
                    
                    copyIcon?.classList.add('hidden');
                    checkIcon?.classList.remove('hidden');

                    // Reset after 2 seconds
                    setTimeout(() => {
                        copyIcon?.classList.remove('hidden');
                        checkIcon?.classList.add('hidden');
                    }, 2000);
                    
                } catch (err) {
                    console.error('Failed to copy resolved: ', err);
                }
            }
        });
    });
</script>

<style>
  .contact-container {
    max-width: 800px;
  }
  .intro {
    font-size: 1.2rem;
    margin-bottom: var(--space-xl);
  }
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  .contact-method {
    display: flex;
    align-items: center;
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-main);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .contact-method {
    display: flex;
    align-items: center;
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-main);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  /* Only apply hover effects if it is a link */
  .contact-method.link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    text-decoration: none;
    border-color: var(--color-accent);
    cursor: pointer;
  }
  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: var(--space-md);
    color: var(--color-accent);
    background: rgba(37, 99, 235, 0.1); /* Subtle accent bg */
    padding: 10px;
    border-radius: 50%;
  }
  .info {
    display: flex;
    flex-direction: column;
  }
  .label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .value {
    font-weight: 500;
    color: var(--color-text-main);
  }
  
  .contact-method {
    position: relative; /* Positioning context for absolute copy button if needed, though flex is better */
    justify-content: flex-start; /* Ensure left alignment */
  }

  .copy-btn {
    margin-left: auto; /* Push to right */
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-muted);
    padding: 8px;
    border-radius: 4px;
    transition: all 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .copy-btn:hover {
    background-color: var(--color-bg);
    color: var(--color-accent);
  }
  
  .hidden {
    display: none;
  }
  
  .check-icon {
    color: #10b981; /* Green for success */
  }
</style>
