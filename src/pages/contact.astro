---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Contact | Sasi Rathinam";
---

<BaseLayout title={pageTitle}>
  <section class="container mt-8 contact-container">
    <h1 class="mb-8">Get in Touch</h1>
    <p class="intro">
      I'm currently open to new projects and consulting opportunities. 
      Whether you have a question or want to discuss a potential collaboration, feel free to reach out!
    </p>
    
    <div class="contact-details">
        <a href="mailto:contact@sasirathinam.com" class="contact-method">
            <span class="label">Email</span>
            <span class="value">contact@sasirathinam.com</span>
        </a>
        <a href="https://linkedin.com/in/sasidharan-rathinam" target="_blank" class="contact-method">
            <span class="label">LinkedIn</span>
            <span class="value">linkedin.com/in/sasidharan-rathinam</span>
        </a>
        <a href="https://github.com/sasidharan-rathinam" target="_blank" class="contact-method">
            <span class="label">GitHub</span>
            <span class="value">github.com/sasidharan-rathinam</span>
        </a>
    </div>

  </section>
</BaseLayout>

<style>
  .contact-container {
    max-width: 800px;
  }
  .intro {
    font-size: 1.2rem;
    margin-bottom: var(--space-xl);
  }
  .contact-details {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  .contact-method {
    display: flex;
    align-items: center;
    padding: var(--space-md);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    color: var(--color-text-main);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .contact-method:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    text-decoration: none;
    border-color: var(--color-accent);
  }
  .label {
    font-weight: 600;
    width: 100px;
    color: var(--color-text-muted);
  }
  .value {
    font-weight: 500;
  }
</style>
