---
import siteData from '../data/site.json';
---
<header>
  <nav class="container nav-content">
    <a href="/" class="logo">{siteData.name}</a>
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/skills">Skills</a>
      <a href="/projects">Projects</a>
      <a href="/blog">Blog</a>
      <a href="/services">Services</a>
      <a href="/contact">Contact</a>
    </div>
  </nav>
</header>

<style>
  header {
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--color-border);
    position: sticky;
    top: 0;
    z-index: 1000;
    background-color: var(--color-bg); /* Ensure content doesn't show behind */
    /* Optional: minimal backdrop blur for modern feel */
    backdrop-filter: blur(8px);
    background-color: rgba(255, 255, 255, 0.9); /* Slight transparency for light mode */
  }
  @media (prefers-color-scheme: dark) {
    header {
      background-color: rgba(15, 23, 42, 0.9); /* Slight transparency for dark mode */
    }
  }
  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-weight: 700;
    color: var(--color-text-main);
    font-size: 1.25rem;
  }
  .nav-links {
    display: flex;
    gap: var(--space-md);
  }
  .nav-links a {
    color: var(--color-text-muted);
    font-size: 0.95rem;
  }
  .nav-links a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }
  /* Mobile responsiveness can be improved later */
  @media (max-width: 640px) {
    .nav-content {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>
