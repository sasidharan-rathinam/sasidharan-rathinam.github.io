---
import siteData from '../data/site.json';
const today = new Date();
---

<footer>
  <div class="container footer-content">
    <p>&copy; {today.getFullYear()} {siteData.name}. All rights reserved.</p>
    <div class="social-links">
      <a href={siteData.socials.github} target="_blank" rel="noopener noreferrer">GitHub</a>
      <a href={siteData.socials.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-border);
    margin-top: auto; /* Push to bottom */
  }
  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  .social-links {
    display: flex;
    gap: var(--space-md);
  }
  .social-links a {
    color: var(--color-text-muted);
  }
  .social-links a:hover {
    color: var(--color-accent);
  }
  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-sm);
      text-align: center;
    }
  }
</style>
