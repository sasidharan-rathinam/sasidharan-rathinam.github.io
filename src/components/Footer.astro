---
import siteData from '../data/site.json';
const today = new Date();
import contactData from '../data/contact.json';

// Simple icon mapping just for the footer if we want icons, or we can use text
// The design currently uses text links, so we'll stick to text labeled by "label"
---

<footer>
  <div class="container footer-content">
    <p>&copy; {today.getFullYear()} {siteData.name}. All rights reserved.</p>
    <div class="social-links">
      {contactData.contactMethods.filter(m => m.url).map(method => (
        <a href={method.url} target={method.icon !== 'mail' ? "_blank" : "_self"} rel="noopener noreferrer">
          {method.label}
        </a>
      ))}
    </div>
  </div>
</footer>

<style>
  footer {
    height: var(--footer-height);
    padding: 0;
    border-top: 1px solid var(--color-border);
    /* Fixed positioning to stick to bottom */
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(8px);
    
    /* Center content vertically */
    display: flex;
    align-items: center;
  }
  @media (prefers-color-scheme: dark) {
    footer {
      background-color: rgba(15, 23, 42, 0.9);
    }
  }
  .footer-content {
    width: 100%; /* Ensure container takes full width inside flex parent */
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }
  .social-links {
    display: flex;
    gap: var(--space-md);
  }
  .social-links a {
    color: var(--color-text-muted);
  }
  .social-links a:hover {
    color: var(--color-accent);
  }
  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-sm);
      text-align: center;
    }
  }
</style>
